Begin transaction;

DROP TABLE IF EXISTS member, interest_group, event;


create table member (
	number serial NOT NULL,
	last_name varchar(64) NOT NULL,
	first_name varchar(64) NOT NULL,
	email varchar (128) NOT NULL,
	phone_number varchar (20),
	date_of_birth date NOT NULL,
	reminder_emails varchar (1280) NOT NULL,
	
	constraint pk_member_number primary key (number)
);

create table interest_group (
	number serial NOT NULL,
	name varchar (128) NOT NULL,
	
	constraint uq_interest_group_name unique (name),
	constraint pk_interest_group_number primary key (number)

);


create table event (
	number serial NOT NULL,
	name varchar (128) NOT NULL,
	description varchar (6400) NOT NULL,
	date_time timestamp  NOT NULL,
	duration interval NOT NULL,
	interest_group int NOT NULL,
	member int,
	
	
	constraint pk_event_number primary key (number),
	constraint fk_event_interest_group foreign key (interest_group) references interest_group(number),
	constraint fk_event_member foreign key (member) references member (number)

);



End transaction;


